<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="pojo.ProgramPOJO" table="program">
		<meta attribute="class-description">
			This class contains the program detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="name" column="name" type="string" />
		<property name="min_duration" column="min_duration" type="int" />
		<property name="max_duration" column="max_duration" type="int" />
		<property name="min_credits" column="min_credits" type="int" />
		<property name="max_credits" column="max_credits" type="int" />
		<property name="min_grade_points" column="min_grade_points" type="int" />
		<property name="min_cpi" column="min_cpi" type="float" />
		<property name="min_foundation_course" column="min_foundation_course" type="int" />
		<property name="min_courses" column="min_courses" type="int" />
		<property name="max_courses" column="max_courses" type="int" />
	</class>
</hibernate-mapping>